#!/bin/bash

RHEA=/var/run/secrets/rhsm/ca/redhat-entitlement-authority.pem

if [[ -f $RHEA ]]; then
  KEYTOOL=$(which keytool)
  if [ "$KEYTOOL" == "" ]; then
    KEYTOOL=$(find /layers -name "keytool")
  fi

  CACERTS_PASSWORD=${CACERTS_PASSWORD:-changeit}

  $KEYTOOL -importcert -cacerts -alias RHEA -noprompt -storepass $CACERTS_PASSWORD -file $RHEA
fi
