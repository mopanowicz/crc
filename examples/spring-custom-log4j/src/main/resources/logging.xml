<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- https://logging.apache.org/log4j/log4j-2.1/manual/customloglevels.html-->
    <CustomLevels>
        <CustomLevel name="AUDIT" intLevel="150" />
    </CustomLevels>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="AuditLog" fileName="audit.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <LevelMatchFilter level="audit"/>
        </File>
        <File name="ErrorLog" fileName="error.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <LevelMatchFilter level="error"/>
        </File>
        <File name="WarnLog" fileName="warn.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <LevelMatchFilter level="warn"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.example" additivity="false" level="debug">
            <AppenderRef ref="AuditLog"/>
            <AppenderRef ref="ErrorLog"/>
            <AppenderRef ref="WarnLog"/>
        </Logger>
    </Loggers>
</Configuration>
